<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mydada_item_ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mydada_icon_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/code"/>

        <ImageView
            android:id="@+id/img_delete_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/delete_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_add_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/add_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mydada_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mydada_icon_img"
            android:layout_centerHorizontal="true"
            android:text="Christie"
            android:textSize="15sp"/>
    </RelativeLayout>

</LinearLayout>